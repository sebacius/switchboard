# Switchboard UI Server
# Build: docker build -f deploy/docker/Dockerfile.ui -t switchboard-ui .

FROM golang:1.24-alpine AS builder

WORKDIR /build

# Install build dependencies
RUN apk add --no-cache git

# Copy go mod files first for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags="-w -s" -o switchboard-ui ./cmd/ui/

# Runtime stage
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata

# Create non-root user
RUN adduser -D -u 1000 switchboard

WORKDIR /app

# Copy binary from builder
COPY --from=builder /build/switchboard-ui /app/

# Switch to non-root user
USER switchboard

# Expose ports
# 3000 - HTTP UI
EXPOSE 3000/tcp

# Environment defaults
ENV UI_LOGLEVEL=info
ENV UI_PORT=3000
ENV UI_BIND=0.0.0.0

ENTRYPOINT ["/app/switchboard-ui"]
